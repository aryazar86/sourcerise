
<%= form_for @callout do |c| %>
  <p>
    <%= c.label :subject %><br />
    <%= c.text_field :subject %>
  </p>
  <p>
    <%= c.label "Expiration date" %><br />
    <%= c.datetime_select :deadline %>
  </p>
  <p>
    <%= c.label :description %><br />
    <%= c.text_area :description %>
  </p>
  <%= c.submit "Submit" %>
<% end %>
