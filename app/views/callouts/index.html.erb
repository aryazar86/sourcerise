






<div class="off-canvas-wrap">
  <div class="inner-wrap">

    <a class="left-off-canvas-toggle" >Filter Callouts by Interests</a> 

    <!-- Off Canvas Menu -->
    <aside class="left-off-canvas-menu">
        <!-- whatever you want goes here -->
        <%= render "interests/interests_render" %>
    </aside>

    <!-- main content goes here -->
    <% if current_user.user_role_id == 1 %>
  <h1>Story Suggestions</h1>
  <%= render :partial => "callouts_render_index", :locals => {:media_callouts => @media_callouts, :story_suggests => @story_suggests} %> 
  
<p><%="#{@story_suggests.length} callouts match your interests." %></p>
<% else %>

  <h1>Media Callouts</h1>
  <%= render :partial => "callouts_render_index", :locals => {:media_callouts => @media_callouts, :story_suggests => @story_suggests} %>
  <p><%="#{@media_callouts.length} callouts match your interests." %></p>
  
<% end %>

  <!-- close the off-canvas menu -->
  <a class="exit-off-canvas"></a>

  </div>
</div>




 
