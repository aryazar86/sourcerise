<h1>Callout out out</h1>
<p>Subject: <%= @callout.subject %></p>
<p>Deadline: <%= @callout.deadline %></p>
<p>Description: <%= @callout.description %> </p>

<h3>Replies</h3>
<% @callout.replies.each do |r| %>
  <% if r.comment != nil %>
    <p><%= r.comment %></p><em><%= r.created_at %> by <%= r.callout.user.first_name %></em></p>
  <% end %>
<% end %>

<%= form_for ([@callout, @reply]) do |f| %>
  <div class="field">
    <%= f.label "Write a Reply:" %><br />
    <%= f.text_area :comment %>
  </div>

  <div class="actions">
    <%= f.submit "Post comment"%>
  </div>
<% end %>