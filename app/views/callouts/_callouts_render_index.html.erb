<% if current_user.user_role_id == 1 %>
    
  <div class="calls">
    <% media_callouts.each do |s| %>
      <%= link_to (callout_path(s.id)) do %>
        <div class="callout-display">
        <% if s.image %>
          <%= image_tag(s.image) %>
        <% end %>
        <p><%= s.subject.truncate(20) %></p>
        </div>
      <% end %>      
    <% end %>
    
  </div>

<% else %>  
  
  <div class="calls">
    <% media_callouts.each do |c| %>
      <%= link_to (callout_path(c.id)) do %>
      <div class="callout-display">
        <% if c.image %>
          <%= image_tag (c.image) %>
        <% end %>
        <p><%= c.subject.truncate(20) %></p>
        </div>
        <% end %>
      
    <% end %>
  </div>
<% end %>