<% if current_user.user_role_id == 1 %>
    
  <div class="calls">
    <% story_suggests.each do |s| %>
      <div class="callout-display"><%= link_to s.subject, callout_path(s.id) %>        
      </div>
      
     
    <% end %>
  </div>
<% else %>  
  <div class="calls">
    <% media_callouts.each do |c| %>
      <div class="callout-display">
        <%= link_to c.subject, callout_path(c.id) %>
      </div>
    <% end %>
  </div>
<% end %>